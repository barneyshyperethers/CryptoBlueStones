# Ethereum Network Configuration
# Copy this file to .env and fill in your actual values

# RPC URL for your Ethereum network
# Testnet examples:
# Sepolia: https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Goerli: https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Mainnet: https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Private key of the account that will deploy contracts
# WARNING: Never commit real private keys to version control!
# Format: 0x1234567890abcdef... (64 characters without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Gas price in wei (optional, will use network default if not set)
GAS_PRICE=20000000000

# Gas limit for transactions (optional)
GAS_LIMIT=1000000
